/* pages/profile/profile.wxss */
/* 最外层父元素 */
.profile{
  background: #e54847;
  height:400rpx;
  text-align: center;/*子元素居中*/
  position: relative;/*父元素相对定位*/
  width:100%;
  border-radius: 10rpx;
}
/* 头像元素 */
.profile-img{
  position: absolute;
  width:200rpx;
  height:200rpx;
  display: block;
  overflow: hidden;/*溢出隐藏*/
  border-radius: 50%;/*圆角50%*/
  left:50%;
  transform: translate(-50%,60rpx);
}